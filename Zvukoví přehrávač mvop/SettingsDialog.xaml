<Window x:Class="Zvukoví_přehrávač_mvop.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Change Song Folder Path:" Margin="5"/>
            <TextBox x:Name="FolderPathTextBox" Margin="5" Text="{Binding PathToSongFolder}" Width="300"/>
            <Button Content="Browse" Margin="5" Click="BrowseButton_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Confirm" Margin="5" Click="ConfirmButton_Click"/>
            <Button Content="Cancel" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
